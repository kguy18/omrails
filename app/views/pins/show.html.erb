<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= image_tag @pin.image %>
			<p class="description">
			  <%= @pin.description %>
			</p>
			<div>
				 Posted by
			  	<%= @pin.user.name %>  
				
				<p class="right">
			  	<%= pluralize @pin.reputation_for(:votes).to_i, "vote" %>
				</p>
			</div>


			


			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>
	</div>
</div>